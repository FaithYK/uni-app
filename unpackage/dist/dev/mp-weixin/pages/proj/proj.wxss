  width: 100%;
  height: 100%;
  display: block;
}
.proj-index .movable-area.active {
  z-index: 9;
}
.proj-index .seek {
  background: #307cf8;
  padding: 13rpx 30rpx 16rpx;
}
.proj-index .up-date {
  background: #f7f7f7;
  padding: 0 30rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #b2b2b2;
}
