<view class="{{['invite-item',!info.status?'verify':'']}}"><view class="{{['user',info.sort?'active':'']}}"><block wx:if="{{info.sort}}"><image class="top" mode="aspectFill" src="../../static/img/help/top.png"></image></block><image class="face" mode="aspectFill" src="{{info.head_img||logo}}"></image><text class="name">{{info.nickname||'小松鼠'}}</text><block wx:if="{{info.sort}}"><text class="time">{{'置顶至'+info.top_time}}</text></block></view><view class="invite-content"><view class="text"><block wx:if="{{showName}}"><view data-event-opts="{{[['tap',[['toLink',['$0','$1'],['info.pub_id','info.project_name']]]]]}}" class="active" bindtap="__e"><image class="p" src="../../static/img/proj/p.png"></image>{{'#'+info.project_name+'#'+''}}</view></block><text>{{info.content}}</text></view><view class="img-list"><block wx:if="{{info.qrcode_group}}"><image class="img" mode="aspectFill" src="{{info.qrcode_group}}" data-event-opts="{{[['tap',[['previewImage',[0]]]]]}}" bindtap="__e"></image></block><block wx:if="{{info.qrcode_user}}"><image class="img" mode="aspectFill" src="{{info.qrcode_user}}" data-event-opts="{{[['tap',[['previewImage',[1]]]]]}}" bindtap="__e"></image></block><block wx:for="{{info.imgs}}" wx:for-item="img" wx:for-index="i" wx:key="i"><image class="img" mode="aspectFill" src="{{img}}" data-event-opts="{{[['tap',[['previewImage',[i+2]]]]]}}" bindtap="__e"></image></block></view><block wx:if="{{info.is_edit}}"><view class="oper"><image class="oper-but" src="../../static/img/oper.png" data-event-opts="{{[['tap',[['operFn',['$event']]]]]}}" bindtap="__e"></image><view class="{{['oper-list',show_oper?'active':'']}}"></view></view></block></view></view>